<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="514.0" prefWidth="865.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.app.controller.MainController">
    <top>
        <ToolBar style="-fx-padding: 10;">
            <Pane style="-fx-background-color: White;" HBox.hgrow="ALWAYS">
            <children>
               <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="14.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../../../images/logo.jpg" />
                  </image>
               </ImageView>
               <Label layoutX="256.0" layoutY="31.0" text="BeeNote 1.0.0">
                  <font>
                     <Font name="Consolas" size="33.0" />
                  </font>
               </Label>
            </children></Pane>
            <Label text="Language:" />
            <ComboBox fx:id="comboLang" prefWidth="80" />
        </ToolBar>
    </top>
    <center>
        <TabPane fx:id="tabPane">
            <tabs>
                <Tab text="Beekeeper">
                    <ToolBar orientation="VERTICAL" />
                    <ToolBar orientation="VERTICAL" style="-fx-padding: 10;">
                        <TableView fx:id="tableBeekeeper" prefHeight="150.0" prefWidth="845.0">
                            <columns>
                                <TableColumn fx:id="colFirstName" text="Meno" />
                                <TableColumn fx:id="colLastName" prefWidth="94.0" text="Priezvisko" />
                            </columns>
                        </TableView>
                  <ToolBar prefHeight="40.0" prefWidth="200.0">
                    <ToolBar nodeOrientation="RIGHT_TO_LEFT" orientation="HORIZONTAL" prefHeight="30.0" prefWidth="830.0">
                        <Button fx:id="showDetailsButton" onAction="#showDetails" text="Show" />
                        <Button fx:id="deleteBeekeeperButton" mnemonicParsing="false" onAction="#deleteBeekeeper" text="Delete" />
                        <Button fx:id="addBeekeeperButton" onAction="#addBeekeeper" text="Add" />
                    </ToolBar>
                  </ToolBar>
                        <TextArea fx:id="detailsArea" prefColumnCount="30" prefHeight="135.0" prefRowCount="5" prefWidth="844.0" />
                    </ToolBar>
                </Tab>
                <Tab text="Taxacia">
                    <ToolBar orientation="VERTICAL" />
                    <ToolBar orientation="VERTICAL" prefHeight="424.0" prefWidth="877.0" style="-fx-padding: 10;">
                        <TableView fx:id="tableTaxacia" prefHeight="150.0" prefWidth="845.0">
                            <columns>
                                <TableColumn fx:id="colDatum" text="Datum" />
                                <TableColumn fx:id="colUl" text="Ul" />
                            </columns>
                        </TableView>
                  <ToolBar prefHeight="40.0" prefWidth="200.0">
                    <ToolBar nodeOrientation="RIGHT_TO_LEFT" orientation="HORIZONTAL" prefHeight="30.0" prefWidth="830.0">
                        <Button fx:id="showTaxationButton" mnemonicParsing="false" onAction="#showTaxation" text="Show" />
                        <Button fx:id="deleteTaxationButton" mnemonicParsing="false" onAction="#deleteTaxation" text="Delete" />
                        <Button fx:id="addTaxationButton" onAction="#addTaxacia" text="Add" />
                    </ToolBar>
                  </ToolBar>
                  <TextArea prefHeight="200.0" prefWidth="200.0" />
                    </ToolBar>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>
